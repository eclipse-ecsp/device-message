<configuration scan="true" scanPeriod="60 seconds">
    <appender name="GELF" class="de.siegmar.logbackgelf.GelfTcpAppender">
        <graylogHost>${GRAYLOG_HOST}</graylogHost>
        <graylogPort>${GRAYLOG_PORT}</graylogPort>
        <connectTimeout>15000</connectTimeout>
        <reconnectInterval>300</reconnectInterval>
        <maxRetries>10</maxRetries>
        <retryDelay>300</retryDelay>
        <poolSize>2</poolSize>
        <poolMaxWaitTime>5000</poolMaxWaitTime>
        <encoder class="de.siegmar.logbackgelf.GelfEncoder">
            <includeRawMessage>false</includeRawMessage>
            <includeMarker>true</includeMarker>
            <includeMdcData>true</includeMdcData>
            <includeCallerData>false</includeCallerData>
            <includeRootCauseData>false</includeRootCauseData>
            <includeLevelName>false</includeLevelName>
            <fullPatternLayout class="ch.qos.logback.classic.PatternLayout">
                <pattern>NA</pattern>
            </fullPatternLayout>
            <shortPatternLayout class="ch.qos.logback.classic.PatternLayout">
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level-%msg %n</pattern>
            </shortPatternLayout>
            <staticField>app:${app}</staticField>
            <staticField>node_name:${NODE_NAME}</staticField>
            <staticField>cName:${HOSTNAME}</staticField>
            <staticField>ms:${ms}</staticField>
            <staticField>msCtype:${msCtype}</staticField>
        </encoder>
    </appender>
    <appender name="ASYNC-GELF" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>100000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>${NEVER_BLOCK_FOR_GRAYLOG}</neverBlock>
        <appender-ref ref="GELF"/>
    </appender>
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/business_records.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>logs/business_records.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- keep 10 days' worth of history -->
            <!-- <maxHistory>30</maxHistory>  -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %class{36}.%M %L - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %class{36}.%M %L - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${LOG_LEVEL}">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </root>
    <logger name="org.eclipse.ecsp" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp" level="${IGNITE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp.register" level="${REGISTRY_COMMON_LOG_LEVEL}"
            additivity="false">
        <appender-ref ref="${LOG_APPENDER:-STDOUT}"/>
    </logger>
    <logger name="org.eclipse.ecsp.security" level="${REGISTRY_COMMON_LOG_LEVEL}"
            additivity="false">
        <appender-ref ref="${LOG_APPENDER:-STDOUT}"/>
    </logger>
    <logger name="org.eclipse.ecsp.config" level="${REGISTRY_COMMON_LOG_LEVEL}"
            additivity="false">
        <appender-ref ref="${LOG_APPENDER:-STDOUT}"/>
    </logger>
    <logger name="org.eclipse.ecsp.nosqldao" level="${STORAGE_LOG_LEVEL}"
            additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="com.mongodb" level="${STORAGE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.springframework" level="${SPRING_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp.devicemessage" level="${SVC_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp.cache-enabler" level="${CACHE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.redisson" level="${CACHE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.apache.kafka" level="${KAFKA_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp.stream" level="${STREAM_BASE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.eclipse.ecsp.stream" level="${STREAM_BASE_LOG_LEVEL}" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="org.hibernate" level="ERROR" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
    <logger name="springfox.documentation" level="ERROR" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC-GELF"/>
    </logger>
</configuration>
